<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<!--<android.support.v7.widget.CardView-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--android:id="@+id/activity_main"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"    -->
    <!--app:cardMaxElevation="8dp">-->

    <LinearLayout
        android:id="@+id/contract_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <!--android:layout_marginTop="66dp"-->
        <!--android:layout_marginBottom="78dp"-->
        <!--android:layout_marginLeft="32dp"-->
        <!--android:layout_marginRight="32dp"-->

        <TextView
            android:id="@+id/contract_content"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:font="@font/myriadpro_bold"
            android:text="Send a Text for TTS"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contract_sub_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text : Welcome to 2018 Samsung Hackerton!!!"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 27, 2018"
                android:textColor="#000000"
                android:textSize="13sp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#ffffff">
            <!--android:layout_marginTop="29px"-->
            <!--android:layout_height="124px"-->

            <ImageView
                android:id="@+id/noteicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_bill_80x93"
                android:contentDescription="note_image"/>
            <!--android:layout_marginStart="17dp"-->

            <TextView
                android:id="@+id/diff_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/noteicon"
                android:text="1hour ago"
                android:textColor="#000000"
                android:textSize="13sp" />

            <!--<ImageView-->
            <!--android:id="@+id/like_person_image"-->
            <!--android:layout_width="80px"-->
            <!--android:layout_height="80px"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:src="@drawable/img_pic_1_124x124" />-->
        </RelativeLayout>

        <TextView
            android:id="@+id/contract_hash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0xThis_is_contract_hash"
            android:textColor="#000000"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />
        <!--android:layout_marginTop="30dp"-->
        <!--android:layout_marginBottom="30dp"-->
    </LinearLayout>
<!--</android.support.v7.widget.CardView>-->
</android.support.constraint.ConstraintLayout>